<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="child" class="learning.beans.BeanChildEmpty"/>

    <bean id="beanA1" class="learning.beans.BeanDependsOnChildEmpty">
        <property name="beanChildEmpty" ref="child"/>
    </bean>

    <bean id="beanA2" class="learning.beans.BeanDependsOnChildEmpty">
        <property name="beanChildEmpty">
            <ref bean="child"/>
        </property>
    </bean>

    <bean id="beanA3" class="learning.beans.BeanDependsOnChildEmpty">
        <property name="beanChildEmptyId">
            <idref bean="child"/>
        </property>
    </bean>
</beans>